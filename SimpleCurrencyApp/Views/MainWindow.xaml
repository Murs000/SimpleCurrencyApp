<Window x:Class="SimpleCurrencyApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCurrencyApp"
        mc:Ignorable="d"
        Title="Currency App"
        WindowState="Maximized"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStyle="None"
        Background="#f4f4f4">
    
    <Window.Resources>
        <CollectionViewSource x:Key="GroupedBanknotes"
                          Source="{Binding Banknotes}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="BatchId"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- List -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="AZN Currency Summary"
                        FontSize="20" FontWeight="Bold" Foreground="#2b5797"
                        Grid.Column="0" Margin="0,0,0,10"/>
                <Button Grid.Column="2" Width="30" Height="30"
                        Content="✕" Margin="5" Padding="5" FontWeight="Bold"
                        Click="ButtonClick" Background="Red" Foreground="White" Opacity="0"/>
                <TextBlock Grid.Column="1" Text="{Binding ConnectionStatus}" FontWeight="Bold" FontSize="14" Foreground="Green" Grid.Row="0" Grid.RowSpan="3"/>
            </Grid>
            

            <!-- Total Count -->
            <Grid Grid.Row="1" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Total Count:" FontWeight="Bold" FontSize="14" Grid.Column="0"/>
                <TextBlock Text="{Binding TotalCount}" FontSize="14" Grid.Column="1" Margin="10,0,0,0"/>
            </Grid>

            <!-- Total Amount -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Total Amount:" FontWeight="Bold" FontSize="14" Grid.Column="0"/>
                <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:N0} AZN}" FontSize="14" Grid.Column="1" Margin="10,0,0,0"/>
            </Grid>
        </Grid>

        <!-- List with Legend -->
        <Grid Grid.Row="1" Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Legend -->
                <RowDefinition Height="*"/>
                <!-- Items -->
            </Grid.RowDefinitions>

            <!-- Legend Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Denomination" FontWeight="Bold" Grid.Column="0"/>
                <TextBlock Text="Count" FontWeight="Bold" Grid.Column="1"/>
                <TextBlock Text="Total" FontWeight="Bold" Grid.Column="2"/>
            </Grid>

            <!-- Banknote Items -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Source={StaticResource GroupedBanknotes}}">
                    <ItemsControl.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="GroupItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="GroupItem">
                                                <Border BorderBrush="Gray"
                                            BorderThickness="1"
                                            Margin="10"
                                            Padding="8">
                                                    <ItemsPresenter />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ItemsControl.GroupStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Denomination, StringFormat={}{0} AZN}" FontSize="14" Grid.Column="0"/>
                                <TextBlock Text="{Binding Count, StringFormat={}{0} pcs}" FontSize="14" Grid.Column="1"/>
                                <TextBlock Text="{Binding Total, StringFormat={}{0:N0} AZN}" FontSize="14" Grid.Column="2"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Footer: Last received + buttons -->
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Last received -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Last Received:" FontWeight="Bold" FontSize="14" Grid.Column="0"/>
                <TextBlock Text="{Binding LastReceived}" FontSize="14" Foreground="DarkGreen" Grid.Column="1"/>
            </Grid>

            <!-- Buttons -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="#2b5797" Grid.Column="0" Margin="5" Padding="10">
                    <TextBlock Text="{Binding DepositText}" HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="White" FontWeight="Bold"/>
                </Border>

                <Border Background="#008272" Grid.Column="1" Margin="5" Padding="10">
                    <TextBlock Text="{Binding RejectText}" HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontSize="16" Foreground="White" FontWeight="Bold"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
